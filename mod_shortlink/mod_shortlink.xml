<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.6.0" method="upgrade">
   <name>Shortlink</name>
   <creationDate>2009-03-20</creationDate>
   <author>Tobias Gesellchen</author>
   <authorEmail>tobias@gesellix.de</authorEmail>
   <authorUrl>http://www.gesellix.de/</authorUrl>
   <copyright>(c) 2009-2012 Tobias Gesellchen</copyright>
   <license>GPL</license>
   <version>3.0.0 2012-04-16 stable</version>
   <description><![CDATA[
      Shortlink module for the corresponding component.
      &copy; Tobias Gesellchen, <a href="http://www.gesellix.de/" target="_blank">www.gesellix.de</a>
      ]]>
   </description>

   <files>
      <filename module="mod_shortlink">mod_shortlink.php</filename>
      <filename>index.html</filename>
      <filename>helper.php</filename>
      <folder>tmpl</folder>
   </files>

   <languages>
      <language tag="en-GB">en-GB.mod_shortlink.ini</language>
   </languages>

   <config>
      <fields name="params">
         <fieldset name="basic">
            <field name="introduction" type="textarea" cols="20" rows="5" default="''" label="Introduction"
                   description="A small descriptive introduction above the search form (optional)."/>
            <field name="presentation" type="radio" default="1" label="Display mode"
                   description="You may select to show an input field, a dropdown list or a combination of both.">
               <option value="0">Input field</option>
               <option value="1">Dropdown box</option>
               <option value="2">Combined</option>
            </field>
         </fieldset>
      </fields>
   </config>
</install>