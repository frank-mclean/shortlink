<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0" method="upgrade">
	<name>Shortlink</name>
	<creationDate>2009-03-20</creationDate>
	<author>Tobias Gesellchen</author>
	<authorEmail>tobias@gesellix.de</authorEmail>
	<authorUrl>http://www.gesellix.de/</authorUrl>
	<copyright>(c) 2009 Tobias Gesellchen</copyright>
	<license>GPL</license>
	<version>3.0</version>
	<description>
		<![CDATA[
		    Shortlink component for Joomla.<br />
		    A short to long links translator.<br />
		    &copy; Tobias Gesellchen, <a href="http://www.gesellix.de/" target="_blank">www.gesellix.de</a>
	    ]]>
    </description>

	<params>
		<param name="helper_path" default="goto.php" />
		<param name="paramname" default="link" />
		<param name="last_call" default="total" />
		<param name="def_filter_order" default="id" />
		<param name="def_filter_dir" default="desc" />
	</params>

	<files folder="site">
		<filename>goto.php</filename>
		<filename>shortlink.php</filename>
		<filename>index.html</filename>
		<folder>models</folder>
		<folder>controllers</folder>
	</files>

    <installfile>install.shortlink.php</installfile>
 
    <uninstallfile>uninstall.shortlink.php</uninstallfile>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>	

   	<administration>

		<menu>Shortlink</menu>

		<files folder="admin">
			<filename>shortlink.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>		

		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_shortlink.ini</language>
			<language tag="de-DE">language/de-DE.com_shortlink.ini</language>
		</languages>

	</administration>
</install>