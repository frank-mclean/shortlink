<?xml version="1.0" encoding="utf-8"?>
<config>
   <fields name="params">
      <fieldset name="config"
                label="com_shortlink_configuration"
                description="COMMON_OPTIONS"
                addfieldpath="/administrator/components/com_shortlink/elements">

         <field name="paramname" type="text" default="link" label="PARAMNAME_LABEL" description="PARAMNAME_DESC" scope="com_shortlink"/>
         <field name="filter_last_call" type="lastcalllist" default="total" label="LASTCALL_LABEL" description="LASTCALL_DESC"
                scope="com_shortlink"/>
         <field name="filter_order" type="list" default="id" label="DEFAULTFILTERORDER_LABEL" description="DEFAULTFILTERORDER_DESC"
                scope="com_shortlink">
            <option value="id">ID</option>
            <option value="phrase">Phrase</option>
            <option value="link">Link</option>
            <option value="description">Description</option>
            <option value="create_date">Created</option>
            <option value="last_call">LAST_CALL</option>
            <option value="counter">Hits</option>
            <option value="avg_hits">AVG_HITS_DAYS</option>
         </field>
         <field name="filter_dir" type="list" default="desc" label="DEFAULTFILTERDIR_LABEL" description="DEFAULTFILTERDIR_DESC"
                scope="com_shortlink">
            <option value="asc">Ascending</option>
            <option value="desc">Descending</option>
         </field>
      </fieldset>
      <fieldset name="helper_path"
                label="HELPER_PATH_CONFIG_LABEL"
                description="HELPER_PATH_CONFIG_DESC"
                addfieldpath="/administrator/components/com_shortlink/elements">

         <field name="spacer" type="spacer" default="&lt;hr /&gt;Location of the original 'goto.php'" label="" description=""
                scope="com_shortlink"/>

         <field name="helper_path" type="checkconfigbutton" default="" label="HELPER_PATH_LABEL" description="HELPER_PATH_DESC" size="80"
                scope="com_shortlink"/>
      </fieldset>
   </fields>
</config>